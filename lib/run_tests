case "${VSC_INSTITUTE_CLUSTER}" in
    thinking)
        module purge
        module load Python/2.7.6-foss-2014a
        ;;
esac

EXEC=`readlink -f ${0}`
EXEC_PATH=`dirname ${EXEC}`
export PYTHONPATH="${EXEC_PATH}:${PYTHONPATH}"
cd "${EXEC_PATH}/test"
python -m unittest discover -p '*_test.py'

